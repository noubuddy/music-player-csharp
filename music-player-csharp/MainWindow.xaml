<Window x:Class="music_player_csharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:music_player_csharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="140" Width="210">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="683*"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_start" Content="Start" HorizontalAlignment="Left" Margin="34,30,0,0" VerticalAlignment="Top" Width="51" Click="btn_start_Click"/>
        <Button x:Name="btn_stop" Content="Stop" HorizontalAlignment="Left" Margin="108,30,0,0" VerticalAlignment="Top" Width="53" Click="btn_stop_Click"/>
        <Label Content="Status: " HorizontalAlignment="Left" Margin="34,71,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_status" Content="pause" HorizontalAlignment="Left" Margin="86,71,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
